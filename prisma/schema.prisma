generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Core {
  id              Int      @id @default(autoincrement())
  name            String   @db.VarChar(255)
  logo            String?  @db.VarChar(255)
  description     String   @db.Text
  address         String   @db.Text
  maps            String?  @db.VarChar(255)
  primary_color   String   @db.VarChar(255)
  secondary_color String   @db.VarChar(255)
  created_by      Int
  updated_by      Int?
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt

  @@map("cores")
}

model Member {
  id          Int       @id @default(autoincrement())
  user_id     Int?      @unique
  name        String    @db.VarChar(255)
  username    String    @unique @db.VarChar(255)
  gender      String    @db.VarChar(255)
  birthdate   DateTime  @db.Date
  address     String    @db.Text
  phone       String    @db.VarChar(255)
  photo       String?   @db.VarChar(255)
  active      Boolean   @default(true)
  created_by  Int
  updated_by  Int?
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt

  @@map("members")
}

model LandingSection {
  id         BigInt   @id @default(autoincrement()) @db.BigInt
  page_key   String   @unique @db.VarChar(50)
  created_by BigInt   @db.BigInt
  created_at DateTime @default(now()) @db.Timestamptz
  updated_by BigInt   @db.BigInt
  updated_at DateTime @updatedAt @db.Timestamptz

  items LandingItem[]

  @@map("landing_sections")
}

model LandingItem {
  id           BigInt   @id @default(autoincrement()) @db.BigInt
  section_id   BigInt   @db.BigInt
  key          String   @db.VarChar(50)
  type         String?  @db.VarChar(30)
  title        String?  @db.VarChar(255)
  content      String?  @db.Text
  image_url    String?  @db.VarChar(512)
  button_label String?  @db.VarChar(100)
  button_url   String?  @db.VarChar(512)
  published    Boolean
  created_by   BigInt   @db.BigInt
  created_at   DateTime @default(now()) @db.Timestamptz
  updated_by   BigInt   @db.BigInt
  updated_at   DateTime @updatedAt @db.Timestamptz

  section LandingSection @relation(fields: [section_id], references: [id])

  @@unique([section_id, key])
  @@map("landing_items")
}

model Icon {
  id         BigInt   @id @default(autoincrement()) @db.BigInt
  name       String   @unique @db.VarChar(100)
  label      String?  @db.VarChar(255)
  is_active  Boolean  @default(true)
  created_at DateTime @default(now()) @db.Timestamptz
  updated_at DateTime @updatedAt @db.Timestamptz

  activities Activity[]

  @@map("icons")
}

model Activity {
  id           BigInt   @id @default(autoincrement()) @db.BigInt
  icon_id      BigInt   @db.BigInt
  title        String   @db.VarChar(255)
  subtitle     String   @db.VarChar(500)
  is_published Boolean  @default(true)
  sort_order   Int?
  created_by   BigInt   @default(0) @db.BigInt
  updated_by   BigInt   @default(0) @db.BigInt
  created_at   DateTime @default(now()) @db.Timestamptz
  updated_at   DateTime @updatedAt @db.Timestamptz

  icon Icon @relation(fields: [icon_id], references: [id])

  @@index([icon_id])
  @@map("activities")
}

model AboutTimeline {
  id           BigInt   @id @default(autoincrement()) @db.BigInt
  year         Int      @unique @db.SmallInt
  title        String   @db.VarChar(150)
  description  String   @db.Text
  is_published Boolean  @default(true)
  created_by   BigInt   @default(0) @db.BigInt
  updated_by   BigInt   @default(0) @db.BigInt
  created_at   DateTime @default(now()) @db.Timestamptz
  updated_at   DateTime @updatedAt @db.Timestamptz

  @@map("about_timelines")
}

model AboutTeamMember {
  id            BigInt   @id @default(autoincrement()) @db.BigInt
  member_id     BigInt   @db.BigInt
  role          String   @db.VarChar(120)
  display_order Int
  is_published  Boolean  @default(true)
  created_by    BigInt   @default(0) @db.BigInt
  updated_by    BigInt   @default(0) @db.BigInt
  created_at    DateTime @default(now()) @db.Timestamptz
  updated_at    DateTime @updatedAt @db.Timestamptz

  @@unique([member_id, role])
  @@index([member_id])
  @@map("about_team_members")
}

model TrainingSchedule {
  id            BigInt   @id @default(autoincrement()) @db.BigInt
  day_of_week   Int      @db.SmallInt
  start_time    DateTime @db.Time(0)
  end_time      DateTime @db.Time(0)
  category      String   @db.VarChar(100)
  member_id     BigInt?  @db.BigInt
  display_order Int      @default(0)
  is_published  Boolean  @default(false)
  created_by    BigInt   @default(0) @db.BigInt
  updated_by    BigInt   @default(0) @db.BigInt
  created_at    DateTime @default(now()) @db.Timestamptz
  updated_at    DateTime @updatedAt @db.Timestamptz

  @@index([is_published, day_of_week, start_time, display_order])
  @@index([member_id])
  @@map("training_schedules")
}

model GalleryItem {
  id            BigInt   @id @default(autoincrement()) @db.BigInt
  image_url     String   @db.VarChar(2048)
  title         String   @db.VarChar(255)
  display_order Int      @default(0)
  is_published  Boolean  @default(false)
  created_by    BigInt   @default(0) @db.BigInt
  updated_by    BigInt   @default(0) @db.BigInt
  created_at    DateTime @default(now()) @db.Timestamptz
  updated_at    DateTime @updatedAt @db.Timestamptz

  @@index([is_published, display_order, id])
  @@map("gallery_items")
}
